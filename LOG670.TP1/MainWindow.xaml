<Window x:Class="LOG670.TP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Name="MainCanvas" Loaded="MainCanvas_Loaded" MouseDown="MainCanvas_MouseDown">
            <Border BorderThickness="1" BorderBrush="Black">
                <Rectangle Width="50" Height="50" Fill="CornflowerBlue"></Rectangle>
            </Border>
            <Border BorderThickness="1" BorderBrush="Black" Canvas.Left="10">
                <Rectangle Width="50" Height="50" Fill="CornflowerBlue"></Rectangle>
            </Border>
            <Border BorderThickness="1" BorderBrush="Black" Canvas.Top="10">
                <Rectangle Width="50" Height="50" Fill="CornflowerBlue"></Rectangle>
            </Border>
        </Canvas>
    </Grid>
</Window>
